<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LineColorPicker">
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="colors" format="reference" />
        <attr name="selectedColorIndex" format="integer" />
        <attr name="diminish" format="float" />
        <attr name="alpha" format="float" />
    </declare-styleable>

    <declare-styleable name="LetterPicker">
        <attr name="fontname" format="string" />
        <attr name="string_array" format="reference" />
        <attr name="item_max_text_length" format="integer" />
        <attr name="lpo_selected_drawable" format="reference" />
        <attr name="lpo_unselected_drawable" format="reference" />
        <attr name="selected_text_color" format="color" />
        <attr name="normal_text_color" format="color" />
        <attr name="text_size" format="dimension" />
    </declare-styleable>
</resources>